<Page x:Class="Demo_WPF.CanvasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CanvasPage">

    <Grid>
        <Canvas Background="LightBlue" Margin="21,80,21,80">
            <Label Name="lblCanvasInstruction" Canvas.Left="20" Canvas.Top="20" Content="Enter Car Information (Canvas)" FontSize="15"/>
            <Label Name="lblCanvasCarName" Canvas.Left="20" Canvas.Top="60" Content="Car Name"/>
            <TextBox Name="txtCanvasCarName" Canvas.Left="100" Canvas.Top="60" Width="193" Height="25"/>
            <Label Name="lblCanvasColor" Canvas.Left="20" Canvas.Top="100" Content="Color"/>
            <TextBox Name="txtCanvasColor" Canvas.Left="100" Canvas.Top="100" Width="193" Height="25"/>
            <Label Name="lblCanvasBrand" Canvas.Left="20" Canvas.Top="140" Content="Brand"/>
            <TextBox Name="txtCanvasBrand" Canvas.Left="100" Canvas.Top="140" Width="193" Height="25"/>
            <Button Name="btnCanvasDisplay" Canvas.Left="100" Canvas.Top="180" Width="80" Height="25" Content="Display" Click="btnCanvasDisplay_Click"/>
        </Canvas>
    </Grid>
</Page>
