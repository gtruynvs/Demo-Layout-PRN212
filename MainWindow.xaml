<Window x:Class="Demo_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,364,0,0">
            <Button Content="Canvas Panel" Width="100" Margin="10" Click="NavigateToCanvasPage"/>
            <Button Content="WrapPanel" Width="100" Margin="10" Click="NavigateToWrapPanelPage"/>
            <Button Content="StackPanel" Width="100" Margin="10" Click="NavigateToStackPanelPage"/>
            <Button Content="GridPanel" Width="100" Margin="10" Click="NavigateToGridPanelPage"/>
            <Button Content="DockPanel" Width="100" Margin="10" Click="NavigateToDockPanelPage"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="DEMO" VerticalAlignment="Top" FontSize="30"/>
    </Grid>
</Window>
